<form version="1.1" theme="dark">
  <label>DNS - Recent Resolutions</label>
  <fieldset submitButton="false">
    <input type="time" token="timePicker1">
      <label></label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <search>
          <query>`easm_index` sourcetype="easm:dns_records" 
| dedup easm.entity, hostname 
| sort -_time 
| table _time, easm.entity, hostname, a{}, cname{}, status_code, ttl 
| rename a{} as a_records, cname{} as cnames, easm.entity as entity</query>
          <earliest>$timePicker1.earliest$</earliest>
          <latest>$timePicker1.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">20</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
</form>